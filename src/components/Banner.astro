---
import bannerImage from "../imgs/banner.jpg";
import Image from "astro/components/Image.astro";
import verticalBannerImage from "../imgs/verticalBanner.jpg";

const { data } = Astro.props;
---
<div class="banner">
  <div class="gradient-bg"></div>
  <div class="banner-content">
    <h1 class="title">
      {data.nombreNovia.toUpperCase()} & {data.nombreNovio.toUpperCase()}
    </h1>
    <p>NUESTRA BODA</p>
  </div>
  <Image
    src={bannerImage}
    alt={data.nombreNovia + " & " + data.nombreNovio}
    class="banner-image"
  />
  <Image
    src={verticalBannerImage}
    alt={data.nombreNovia + " & " + data.nombreNovio}
    class="banner-image-v"
  />
</div>

<style>
  .banner {
    position: relative;
    overflow: hidden;
    z-index: 1; /* Asegura que el banner est√© en el nivel correcto */
  }

  .banner-image {
    display: none;
  }

  .banner-image-v {
    display: block;
    width: 100%;
    object-fit: cover;
  }

  .gradient-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.5466561624649859) 25%,
      rgba(255, 255, 255, 0.05085784313725494) 56%
    );
    z-index: 1;
  }

  .banner-content {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    z-index: 2;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .banner-content h1 {
    font-family: "Aboreto", cursive;
    font-weight: 400;
    font-size: 2.4rem;
    width: 100%;
    margin: 0;
  }

  .banner-content p {
    font-size: 1.1rem;
    margin: 0;
    letter-spacing: 0.3em;
    font-family: 'Courier New', Courier, monospace;
  }

  @media (min-width: 768px) {
    .banner-image-v {
      display: none;
    }

    .banner-image {
      display: block;
      height: 70vh;
      width: 100%;
      object-fit: cover;
    }

    .banner-content h1 {
      font-size: 4rem;
    }

    .banner-content {
      position: absolute;
      top: 70%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .banner-image {
      height: 70vh;
    }

    .gradient-bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.5466561624649859) 25%,
        rgba(255, 255, 255, 0.05085784313725494) 56%
      );
      z-index: 1;
    }

    .banner-content p {
      font-size: 2rem;
    }
  }
</style>